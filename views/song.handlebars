<header>
  <a href="#" class="home-btn">SoundBase</a>
  <div class="menu">Menu</div>
</header>
<div class="container">
  <div class="song-header">
    <!-- Dynamischer Inhalt von der API -->
    <img
      id="album-cover"
      src="https://via.placeholder.com/120"
      alt="Album Cover"
    />
    <div class="song-info">
      <h1 id="song-title">Loading...</h1>
      <h2 id="song-artist">Loading...</h2>
      <p id="album-name">Loading...</p>
    </div>
    <!-- Button zum Öffnen des Overlays -->
    <button
      class="recommend-btn"
      onclick="openOverlay({
name: document.getElementById('song-title').textContent,
artists: document.getElementById('song-artist').textContent,
albumImg: document.getElementById('album-cover').src
})"
    >
      Recommend
    </button>
  </div>
  <div class="recent-recommendations">
    <h2>Recent recommendations</h2>
    <!-- Hier können dynamisch Kommentare eingefügt werden -->
    <div class="comment">
      <div class="user">
        <img src="https://via.placeholder.com/40" alt="User Avatar" />
        <div>
          <p class="user-name">Nutzer x</p>
          <p class="time">14:20</p>
        </div>
      </div>
      <div class="content">I love skibidi Toilet song, it's so great!</div>
      <div class="like-btn">❤️</div>
    </div>
  </div>
</div>
<!-- Overlay hinzufügen -->
<div id="recommend-overlay" class="overlay hidden">
  <div class="overlay-content">
    <button class="close-btn" onclick="closeOverlay()">✕</button>
    <div class="song-info">
      <img
        id="overlay-album-img"
        src="https://via.placeholder.com/120"
        alt="Album Cover"
      />
      <div>
        <h2 id="overlay-song-title">Song Title</h2>
        <p id="overlay-song-artist">Artist</p>
      </div>
    </div>
    <textarea
      id="comment-input"
      placeholder="What's your favorite part?"
    ></textarea>
    <button class="recommend-submit" onclick="submitRecommendation()">
      Recommend ➔
    </button>
    <div id="success-message" class="hidden">
      <div class="success-icon">✔</div>
      <p>Successfully recommended</p>
    </div>
  </div>
</div>